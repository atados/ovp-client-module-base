.leading-none
  line-height: 1

.leading-tight
  line-height: 1.25

.leading-snug
  line-height: 1.375

.leading-normal
  line-height: 1.5

.leading-relaxed
  line-height: 1.625

.leading-loose
  line-height: 2

.justify-content-between
  justify-content: space-between !important

.text-white
  color: #fff
