// Colors
text-variant('.tc-base', $text-base)
text-variant('.tc-white', #fff)
text-variant('.tc-link', $link-color)
text-variant('.tc-success', $color-success)
text-variant('.tc-error', $color-error)
text-variant('.tc-light', rgba(white, 0.8))
text-variant('.tc-muted', $color-muted)
text-variant('.tc-muted-dark', $color-muted-dark)

.tc-white
  text-variant('.tc-muted', rgba(#fff, .5))

// Sizes
.ts-tiny
  font-size: .75rem !important

.ts-small
  font-size: .875rem !important

.ts-normal
  font-size: 1rem !important

.ts-medium
  font-size: 1.125rem !important

.ts-large
  font-size: 1.25rem !important

// Align
for $breakpoint in $grid-breakpoints
  +media-breakpoint-up($breakpoint)
    $infix = breakpoint-infix($breakpoint, $grid-breakpoints)

    .ta{$infix}-left
      text-align: left !important

    .ta{$infix}-center
      text-align: center !important

    .ta{$infix}-right
      text-align: right !important

.tl-1
  line-height: 1

.tl-base
  line-height: 1.5

.tl-heading
  line-height: $headings-line-height

// Transformation ---------------
.tt-lower
  text-transform: lowercase !important

.tt-upper
  text-transform: uppercase !important

// Weight and italics ----------
.tw-light
  font-weight: $font-weight-light !important

.tw-normal
  font-weight: $font-weight-normal !important

.tw-medium
  font-weight: $font-weight-medium !important

.tw-bold
  font-weight: $font-weight-bold !important

.t-italic
  font-style: italic !important

// Heading
.display-1
  font-size: 4rem

// Truncate
.text-truncate
  text-truncate()

.td-hover-none:hover
  text-decoration: none

.td-line-through
  text-decoration: line-through

.td-underline
  text-decoration: underline

.td-hover-underline:hover
  text-decoration: underline

.text-nowrap
  white-space: nowrap

.t-about
  p
    margin-bottom: 3rem

.t-nowrap
  white-space: nowrap

.vertical-align-top
  vertical-align: top

.vertical-align-middle
  vertical-align: middle

.text-xs
  font-size: .75rem

.text-sm
  font-size: .875rem

.text-base
  font-size: 1rem

.text-lg
  font-size: 1.125rem

.text-xl
  font-size: 1.25rem

.text-2xl
  font-size: 1.5rem

.text-3xl
  font-size: 1.875rem

.text-4xl
  font-size: 2.25rem

.text-5xl
  font-size: 3rem

.text-6xl
