.border-transparent
  border-color: transparent !important

.no-border
  border-width: 0

.border-l,
.border-r,
.border-t,
.border-b,
.border
  border-width: 0
  border-style: solid
  border-color: #c3c2c5;

.border
  border-width: 1px

.border-l
  border-left-width: 1px

.border-r
  border-right-width: 1px

.border-t
  border-top-width: 1px

.border-b
  border-bottom-width: 1px

.border-color-white
  border-color: #fff
