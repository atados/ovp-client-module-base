  "devDependencies": {
    "@sentry/types": "^5.1.0",
    "@storybook/addon-actions": "^5.0.10",
    "@storybook/addon-info": "^5.0.10",
    "@storybook/addon-links": "^5.0.10",
    "@storybook/addons": "^5.0.10",
    "@storybook/react": "^5.0.10",
    "@types/body-parser": "^1.17.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/express-session": "^1.15.12",
    "@types/googlemaps": "^3.30.19",
    "@types/intl": "^1.2.0",
    "@types/jest": "^24.0.11",
    "@types/marked": "^0.6.5",
    "@types/nanoid": "^1.2.1",
    "@types/next": "^8.0.4",
    "@types/next-redux-wrapper": "^2.0.2",
    "@types/passport": "^1.0.0",
    "@types/prompts": "^2.0.1",
    "@types/react": "^16.8.14",
    "@types/react-dom": "^16.8.4",
    "@types/react-intl": "^2.3.17",
    "@types/react-redux": "^7.1.1",
    "@types/react-test-renderer": "^16.8.1",
    "@types/redux-logger": "^3.0.7",
    "@types/slate": "^0.44.3",
    "@types/slate-react": "^0.21.2",
    "@types/storybook__addon-info": "^4.1.1",
    "@types/styled-components": "^4.1.14",
    "@types/yup": "^0.26.12",
    "autoprefixer": "^9.5.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-graphql-tag": "^2.1.0",
    "babel-plugin-react-intl": "^3.0.1",
    "babel-plugin-react-require": "^3.1.1",
    "babel-plugin-styled-components": "^1.10.0",
    "chalk": "^2.4.2",
    "fork-ts-checker-webpack-plugin": "^1.2.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "gulp": "^4.0.1",
    "gulp-postcss": "^8.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-stylus": "^2.7.0",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "jest-styled-components": "^6.3.1",
    "lint-staged": "^8.2.1",
    "mkdirp": "^0.5.1",
    "postcss-filters": "^0.0.2",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-selector-not": "^4.0.0",
    "prettier": "^1.17.0",
    "prompts": "^2.0.4",
    "react-docgen-typescript-loader": "^3.1.0",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-test-renderer": "^16.8.6",
    "rimraf": "^2.6.3",
    "staged-git-files": "^1.1.2",
    "stylus": "^0.54.5",
    "tncc": "^1.0.0",
    "ts-node": "^8.3.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0",
    "tslint-react-hooks": "^2.1.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "base/**/*.{js,jsx,ts,tsx}",
      "!base/**/*.d.ts",
      "channel/**/*.{js,jsx,ts,tsx}",
      "!channel/**/*.d.ts"
    ],
    "setupFilesAfterEnv": [],
    "testMatch": [
      "<rootDir>/base/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/base/**/*.{spec,test}.{js,jsx,ts,tsx}",
      "<rootDir>/channel/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/channel/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "modulePaths": [],
    "moduleFileExtensions": ["ts", "tsx", "js", "json", "jsx", "node"]
  },
  "tsconfig": {
    "compileOnSave": false,
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "jsx": "preserve",
      "allowJs": false,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": false,
      "strictNullChecks": true,
      "preserveConstEnums": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
        "~/base/*": ["base/*"],
        "~/pages/*": ["channel/pages/*", "base/pages/*"],
        "~/*": ["channel/*", "base/*"]
      },
      "typeRoots": ["./base/types", "./node_modules/@types"],
      "lib": ["dom", "es2015", "es2016"]
    },
    "exclude": ["tmp", "node_modules", ".next", ".dist"]
  },
  "tsconfig.server": {
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "module": "commonjs",
      "outDir": ".next/production-server/"
    },
    "exclude": ["tmp", "node_modules", ".storybook", "stories", ".dist"],
    "include": ["base/server/**/*.ts", "channel/server/**/*.ts"]
  },
  "tslint": {
    "defaultSeverity": "error",
    "extends": [
      "tslint:recommended",
      "tslint-config-prettier",
      "tslint-react-hooks"
    ],
    "rules": {
      "interface-name": [true, "never-prefix"],
      "object-literal-sort-keys": false,
      "jsx-no-lambda": [false],
      "no-console": [true, "log"],
      "no-relative-imports": ["never"]
    },
    "rulesDirectory": [],
    "linterOptions": {
      "exclude": ["node_modules/**/*"]
    }
  }
}
