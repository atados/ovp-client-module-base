{
  "scripts": {
    "dev": "yarn compile:server -r -w",
    "dev:client": "node .dist/server/index.js",
    "dev:server": "DISABLE_NEXT=true yarn compile:server -w -r",
    "compile:server": "yarn rimraf .dist/production-server && tncc base/server/index.ts -o .dist/server/ -c tsconfig.server.json",
    "build": "next build && yarn gulp && NODE_ENV=production yarn compile:server -o .dist/production-server/ --release",
    "start": "NODE_ENV=production node .dist/production-server/index.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "lint": "tslint \"./**/*.{ts,tsx}\" -c tslint.json",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "css": "gulp css",
    "css:watch": "gulp watch",
    "prettier": "prettier --write \"{next.config.js,gulpfile.js,{pages,base,channel,__{tests,mocks}__}/**/*.{js,ts,tsx}}\"",
    "rebase": "ts-node -P tsconfig.server.json -e \"require('./base/internals/channel/rebase-channel').default()\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn type-check && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": ["prettier --write", "git add"],
    "**/*.{ts,tsx}": ["tslint --fix --project .", "prettier --write", "git add"]
  },
  "dependencies": {
