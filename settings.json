    "graphql-tag": "^2.10.1",
    "hoist-non-react-statics": "^3.3.0",
    "immutable": "^4.0.0-rc.12",
    "intl": "^1.2.5",
    "isomorphic-unfetch": "^3.0.0",
    "marked": "^0.6.2",
    "moment": "^2.24.0",
    "nanoid": "^2.0.1",
    "next": "^8.1.0",
    "next-redux-wrapper": "^3.0.0-alpha.2",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pluralize": "^8.0.0",
    "query-string": "^6.4.2",
    "react": "^16.8.6",
    "react-apollo-hooks": "^0.4.5",
    "react-dom": "^16.8.6",
    "react-fetch-json-hook": "^0.1.7",
    "react-intl": "^2.8.0",
    "react-redux": "^7.1.0",
