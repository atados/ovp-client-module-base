    "react-text-mask": "^5.4.3",
    "react-textarea-autosize": "^7.1.0",
    "react-waypoint": "^9.0.2",
    "redux": "^4.0.1",
    "redux-handy": "^0.1.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "showdown": "^1.9.0",
    "slate": "^0.45.1",
    "slate-html-serializer": "^0.7.39",
    "slate-paste-linkify": "^0.7.0",
    "slate-react": "^0.21.21",
    "styled-components": "^4.2.0",
    "subscriptions-transport-ws": "^0.9.16",
    "turndown": "^5.0.3",
    "yup": "^0.27.0"
