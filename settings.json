    "apollo-link-ws": "^1.0.17",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.3.1",
    "classnames": "^2.2.6",
    "connect-redis": "^3.4.1",
    "cookie-parser": "^1.4.4",
    "dotenv": "^7.0.0",
    "escape-string-regexp": "^2.0.0",
    "express": "^4.16.4",
    "express-session": "^1.16.1",
    "flat": "^4.1.0",
    "formik": "^1.5.3",
    "geoip-lite": "^1.3.7",
    "google-map-react": "^1.1.4",
